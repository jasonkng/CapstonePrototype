<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/list_component"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/list_date"
            android:fontFamily="@font/berlin_sans_fb_regular"
            android:maxLines="1"
            android:text="UniqueID"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/list_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/berlin_sans_fb_regular"
            android:text="2020/10/27"
            android:textSize="20sp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/list_defect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_component"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/list_priority"
            android:fontFamily="@font/berlin_sans_fb_regular"
            android:text="Defect"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/list_component"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/list_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_defect"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/berlin_sans_fb_regular"
            android:maxLines="1"
            android:text="Length"
            android:textSize="20sp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/list_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_date"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/berlin_sans_fb_regular"
            android:text="Priority"
            android:textSize="20sp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>